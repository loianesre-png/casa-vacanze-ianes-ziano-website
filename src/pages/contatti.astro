---
import Layout from '~/layouts/PageLayout.astro';

import CalendarForm from '~/components/widgets/CalendarForm';
import Features2 from '~/components/widgets/Features2.astro';
import HeroText from '~/components/widgets/HeroText.astro';

const metadata = {
  title: 'Contatti - Casa Negrano | Richiedi Informazioni',
  description: 'Contattaci per informazioni e prenotazioni. Siamo a Villazzano, Trento. Email: casanegrano@gmail.com',
};
---

<Layout metadata={metadata}>
