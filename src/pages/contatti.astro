  <HeroText tagline="Contatti" title="Mettiamoci in contatto!" />

  <div
    class="max-w-3xl mx-auto text-center p-6 rounded-md shadow-xl dark:shadow-none dark:border dark:border-slate-600"
  >
    <CalendarForm client:idle />
  </div>

  <!-- Features2 Widget ************** -->
  <Features2
    title="Ecco come trovarci!"
    items={[
      {
        title: 'Email',
        description: 'casanegrano@gmail.com',
        icon: 'tabler:mail',
      },
