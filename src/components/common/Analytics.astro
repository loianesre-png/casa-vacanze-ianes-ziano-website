---
import { ANALYTICS } from 'astrowind:config';
const gaId = ANALYTICS?.vendors?.googleAnalytics?.id;
const usePartytown = ANALYTICS?.vendors?.googleAnalytics?.partytown ?? false;
---

{gaId && (
  <>
    <script
      is:inline
      type={usePartytown ? 'text/partytown' : undefined}
      src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}
    />
    <script is:inline type={usePartytown ? 'text/partytown' : undefined} define:vars={{ gaId }}>
      window.dataLayer = window.dataLayer || [];
      function gtag() { dataLayer.push(arguments); }
      gtag('js', new Date());
      gtag('config', gaId);
    </script>
  </>
)}

