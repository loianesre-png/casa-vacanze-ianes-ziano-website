---
// import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';
import { getMapConfig, getFormattedAddress, getSiteName } from '~/config';

// Get map configuration from centralized config
const mapConfig = getMapConfig();
const formattedAddress = getFormattedAddress();
const siteName = getSiteName();

// Build OpenStreetMap embed URL (alternative to Google Maps)
// For Google Maps, you'll need to get a proper embed URL from Google Maps
const osmEmbedUrl = mapConfig.coordinates
  ? `https://www.openstreetmap.org/export/embed.html?bbox=${mapConfig.coordinates.lng - 0.01}%2C${mapConfig.coordinates.lat - 0.01}%2C${mapConfig.coordinates.lng + 0.01}%2C${mapConfig.coordinates.lat + 0.01}&layer=mapnik&marker=${mapConfig.coordinates.lat}%2C${mapConfig.coordinates.lng}`
  : null;

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
  /** Optional Google Maps embed URL (get this from Google Maps share feature) */
  mapEmbedUrl?: string;
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light', mapEmbedUrl } = Astro.props;

// Use provided Google Maps URL, or fall back to OSM
const finalMapUrl = mapEmbedUrl || osmEmbedUrl;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-muted bg-card not-prose']}>
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12">
      <!-- Site info -->
      <div class="md:col-span-12 lg:col-span-4">
        <div class="mb-4">
          <a class="inline-block font-heading font-medium text-xl text-foreground hover:text-primary transition-all duration-400" href={getHomePermalink()}>{SITE?.name}</a>
        </div>
        <div class="text-sm flex flex-wrap gap-2 mb-6 text-muted-foreground">
          {
            secondaryLinks.map(({ text, href }, index) => (
              <>
                {index !== 0 ? ' Â· ' : ''}
                <a
                  class="hover:text-primary transition-all duration-400"
                  href={href}
                  set:html={text}
                />
              </>
            ))
          }
        </div>
      </div>

      <!-- Links columns -->
      <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:col-span-12 lg:col-span-8">
        {
          links.map(({ title, links }) => (
            <div class="mb-4">
              <div class="text-foreground font-medium mb-3 uppercase tracking-wide text-sm">{title}</div>
              {links && Array.isArray(links) && links.length > 0 && (
                <ul class="text-sm">
                  {links.map(({ text, href, ariaLabel }) => (
                    <li class="mb-2">
                      <a
                        class="text-muted-foreground hover:text-primary transition-all duration-400"
                        href={href}
                        aria-label={ariaLabel}
                      >
                        <Fragment set:html={text} />
                      </a>
                    </li>
                  ))}
                </ul>
              )}
            </div>
          ))
        }
      </div>

      <!-- Footnote -->
      <div class="text-sm text-center md:text-left sm:grid-cols-3 md:col-span-12 text-muted-foreground">
        <Fragment set:html={footNote} />
      </div>

      <!-- MAP - Only shown if coordinates are configured -->
      {finalMapUrl && (
        <div class="md:col-span-12 lg:col-span-12 mt-6">
          <iframe
            class="w-full h-[250px] sm:h-[300px] md:h-[350px] rounded shadow-md"
            title={`Mappa - ${siteName}`}
            src={finalMapUrl}
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          >
          </iframe>
        </div>
      )}
    </div>

