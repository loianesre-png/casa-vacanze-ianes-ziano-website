---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';
import type { Testimonials as Props } from '~/types';
import { getSocialLinks } from '~/config';
import { getCommonContent } from '~/utils/content';

const socialLinks = getSocialLinks();
const common = await getCommonContent();

// Get reviews URL from social links (booking.com link)
const reviewsUrl = socialLinks?.booking;

const {
  title = '',
  subtitle = '',
  tagline = '',
  testimonials = [],
  callToAction,
  /** Optional reviews URL override */
  reviewsLink,
  /** Text for the "read more" link */
  readMoreText,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

// Use provided reviewsLink, fallback to booking.com from config
const finalReviewsUrl = reviewsLink || (reviewsUrl ? `${reviewsUrl}#tab-reviews` : null);
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      testimonials &&
        testimonials.map(({ title, testimonial, name, job, image }) => (
          <div class="flex h-auto">
            <div class="flex flex-col p-4 md:p-6 rounded shadow-luxury-md dark:shadow-none dark:border dark:border-slate-600 bg-luxury-white border border-luxury-sand">
              {title && <h2 class="text-lg font-medium leading-6 pb-4 text-luxury-black">{title}</h2>}
              {testimonial && (
                <blockquote class="flex-auto">
                  <p class="text-luxury-graphite italic">" {testimonial} "</p>
                </blockquote>
              )}

              <hr class="border-luxury-sand dark:border-slate-600 my-4" />

              <div class="flex items-center">
                {image && (
                  <div class="h-10 w-10 rounded-full border border-luxury-sand dark:border-slate-600">
                    {typeof image === 'string' ? (
                      <Fragment set:html={image} />
                    ) : (
                      <Image
                        class="h-10 w-10 rounded-full border border-luxury-sand dark:border-slate-600 min-w-full min-h-full"
                        width={40}
                        height={40}
                        widths={[400, 768]}
                        layout="fixed"
                        {...image}
                      />
                    )}
                  </div>
                )}

                <div class="grow ml-3 rtl:ml-0 rtl:mr-3">
                  {name && <p class="text-base font-medium text-luxury-black">{name}</p>}
                  {job && <p class="text-xs text-luxury-graphite">{job}</p>}
                </div>
              </div>
            </div>
          </div>
        ))
    }
  </div>

  {finalReviewsUrl && (
    <div class="flex justify-center mx-auto w-fit mt-8 md:mt-12 font-medium">
      <p class="text-center text-md text-luxury-graphite mt-4">
        <a
          href={finalReviewsUrl}
          class="text-luxury-gold hover:text-luxury-bronze underline transition-all duration-400"
          target="_blank"
          rel="noopener noreferrer"
        >
          {readMoreText || common.buttons?.view_all || 'Leggi di pi√π!'}
        </a>
      </p>
    </div>
  )}
  {
    callToAction && (
      <div class="flex justify-center mx-auto w-fit mt-8 md:mt-12 font-medium">
        <Button {...callToAction} />
      </div>
    )
  }
</WidgetWrapper>
