---
// Responsive ImageCarousel.astro with srcset support
interface ImageItem {
  src: string;
  srcset?: string;
  sizes?: string;
  alt?: string;
  title?: string;
  fullSrc?: string; // For modal full-resolution view
  fullSrcset?: string;
}

interface Props {
  images: ImageItem[];
  loading?: 'eager' | 'lazy';
  preloadCount?: number;
}

const { images } = Astro.props;

// Process image sources - now includes srcset
const safeImages = images.map((img, index) => ({
  src: img.src,
  srcset: img.srcset || '',
  sizes: img.sizes || '(max-width: 768px) 100vw, 50vw',
  alt: img.alt || `Image ${index + 1}`,
  title: img.title || '',
  fullSrc: img.fullSrc || img.src,
  fullSrcset: img.fullSrcset || img.srcset || '',
}));
---

<div
  class="relative w-full max-w-4xl mx-auto"
  x-data={`{
        images: ${JSON.stringify(safeImages)},
        currentIndex: 0,
        isModalOpen: false,
        loadedImages: new Set(),
        isLoading: false,
        autoplayInterval: null,
        autoplayEnabled: false,
        touchStartX: 0,
        touchEndX: 0,
        isInitialized: false,
        
        init() {
            requestIdleCallback(() => {
                this.initialize();
            }, { timeout: 1000 });
        },
        
        initialize() {
            if (this.isInitialized) return;
            this.isInitialized = true;
            
            // Load first image immediately
            this.loadImage(0);
            
            // Preload adjacent images including wrap-around
            if (this.images.length > 1) {
                const lastIndex = this.images.length - 1;
                this.loadImage(lastIndex);
                this.loadImage(1);
            }
            
            this.setupIntersectionObserver();
            this.setupKeyboardNavigation();
        },
        
        setupIntersectionObserver() {
            if (!('IntersectionObserver' in window)) return;
            
            const observer = new IntersectionObserver(
                (entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting && entry.intersectionRatio > 0.1) {
                            this.preloadNearbyImages();
                        }
                    });
                },
                {
                    rootMargin: '100px',
                    threshold: [0, 0.1, 0.5]
                }
            );
            
            observer.observe(this.$el);
        },
        
        setupKeyboardNavigation() {
            const handler = (e) => {
                if (!this.isModalOpen) return;
                if (e.key === 'ArrowLeft') this.prev();
                if (e.key === 'ArrowRight') this.next();
            };
            
            document.addEventListener('keydown', handler);
            
            this.$el._cleanup = () => {
                document.removeEventListener('keydown', handler);
            };
        },
        
        async loadImage(index) {
            if (this.loadedImages.has(index)) return Promise.resolve();
            
            return new Promise((resolve) => {
                const img = new Image();
                let resolved = false;
                
                const timeout = setTimeout(() => {
                    if (!resolved) {
                        this.loadedImages.add(index);
                        resolved = true;
                        resolve();
                    }
                }, 10000);
                
                img.onload = () => {
                    if (resolved) return;
                    clearTimeout(timeout);
                    resolved = true;
                    this.loadedImages.add(index);
                    resolve();
                };
                
                img.onerror = (e) => {
                    if (resolved) return;
                    clearTimeout(timeout);
                    resolved = true;
                    this.loadedImages.add(index);
                    resolve();
                };
                
                img.decoding = 'async';
                
                // Use srcset if available for better loading
                if (this.images[index].srcset) {
                    img.srcset = this.images[index].srcset;
                    img.sizes = this.images[index].sizes;
                }
                img.src = this.images[index].src;
            });
        },
        
        preloadNearbyImages() {
            const indicesToLoad = [
                this.currentIndex,
                (this.currentIndex + 1) % this.images.length,
                (this.currentIndex - 1 + this.images.length) % this.images.length
            ];
            
            indicesToLoad.forEach(index => {
                if ('requestIdleCallback' in window) {
                    requestIdleCallback(() => this.loadImage(index));
                } else {
                    setTimeout(() => this.loadImage(index), 0);
                }
            });
        },
        
        async prev() {
            const newIndex = this.currentIndex === 0 
                ? this.images.length - 1 
                : this.currentIndex - 1;
            await this.goToSlide(newIndex);
        },
        
        async next() {
            const newIndex = (this.currentIndex + 1) % this.images.length;
            await this.goToSlide(newIndex);
        },
        
        async goToSlide(index) {
            if (index === this.currentIndex) return;
            
            if (!this.loadedImages.has(index)) {
                this.isLoading = true;
            }
            
            await this.loadImage(index);
            this.currentIndex = index;
            this.preloadNearbyImages();
            this.isLoading = false;
        },
        
        openModal() {
            this.isModalOpen = true;
            document.body.style.overflow = 'hidden';
            document.body.style.paddingRight = this.getScrollbarWidth() + 'px';
            this.preloadNearbyImages();
        },
        
        closeModal() {
            this.isModalOpen = false;
            document.body.style.overflow = '';
            document.body.style.paddingRight = '';
            this.stopAutoplay();
        },
        
        getScrollbarWidth() {
            return window.innerWidth - document.documentElement.clientWidth;
        },
        
        toggleAutoplay() {
            this.autoplayEnabled = !this.autoplayEnabled;
            if (this.autoplayEnabled) {
                this.startAutoplay();
            } else {
                this.stopAutoplay();
            }
        },
        
        startAutoplay() {
            this.stopAutoplay();
            this.autoplayInterval = setInterval(() => {
                if (!this.isLoading) this.next();
            }, 3000);
        },
        
        stopAutoplay() {
            if (this.autoplayInterval) {
                clearInterval(this.autoplayInterval);
                this.autoplayInterval = null;
            }
        },
        
        handleTouchStart(e) {
            this.touchStartX = e.touches[0].clientX;
        },
        
        handleTouchEnd(e) {
            this.touchEndX = e.changedTouches[0].clientX;
            this.handleSwipe();
        },
        
        handleSwipe() {
            const swipeThreshold = 50;
            const diff = this.touchStartX - this.touchEndX;
            
            if (Math.abs(diff) > swipeThreshold) {
                if (diff > 0) {
                    this.next();
                } else {
                    this.prev();
                }
            }
        }
    }`}
  @keydown.escape.window="closeModal()"
>
  <!-- Loading indicator -->
  <div
    x-show="isLoading"
    class="absolute inset-0 bg-foreground/20 flex items-center justify-center z-20 rounded"
    x-transition:enter="transition ease-out duration-150"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-cloak
  >
    <div class="bg-card/90 rounded-full p-3">
      <svg class="animate-spin h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path
          class="opacity-75"
          fill="currentColor"
          d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
        ></path>
      </svg>
    </div>
  </div>

  <!-- Thumbnail carousel -->
  <div
    class="overflow-hidden relative rounded aspect-video bg-secondary border border-muted shadow-luxury-md"
    @touchstart="handleTouchStart($event)"
    @touchend="handleTouchEnd($event)"
  >
    <div
      class="flex h-full transition-transform duration-500 ease-in-out"
      :style="`transform: translateX(-${currentIndex * 100}%)`"
      style="will-change: transform;"
    >
      <template x-for="(image, index) in images" :key="index">
        <div class="w-full h-full flex-shrink-0 relative">
          <!-- Responsive image with srcset -->
          <img
            :src="image.src"
            :srcset="image.srcset"
            :sizes="image.sizes"
            :alt="image.alt"
            :title="image.title"
            class="w-full h-full object-cover"
            :class="{ 'opacity-0': !loadedImages.has(index), 'opacity-100 transition-opacity duration-300': loadedImages.has(index) }"
            loading="lazy"
            decoding="async"
            @load="loadedImages.add(index)"
            @error="loadedImages.add(index)"
          />
          
          <!-- Placeholder skeleton -->
          <div
            x-show="!loadedImages.has(index)"
            class="absolute inset-0 bg-gradient-to-r from-background via-secondary to-background animate-pulse"
            x-cloak
          >
            <div class="absolute inset-0 flex items-center justify-center">
              <svg class="w-16 h-16 text-primary/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
          </div>
        </div>
      </template>
    </div>

    <!-- Control buttons -->
    <div class="absolute inset-0 flex items-center justify-between pointer-events-none">
      <button
        @click="openModal"
        class="absolute top-2 right-2 bg-primary/90 hover:bg-primary text-foreground p-2 rounded transition-all duration-400 z-10 pointer-events-auto hover:scale-110"
        aria-label="Open larger view"
        title="View fullscreen"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M16 4l4 0l0 4"></path>
          <path d="M14 10l6 -6"></path>
          <path d="M8 20l-4 0l0 -4"></path>
          <path d="M4 20l6 -6"></path>
        </svg>
      </button>

      <template x-if="images.length > 1">
        <div class="flex justify-between w-full px-2 pointer-events-auto">
          <button @click="prev" class="bg-muted-foreground/80 hover:bg-primary text-white hover:text-foreground p-2 rounded transition-all duration-400 hover:scale-110 group" aria-label="Previous">
            <svg class="h-6 w-6 group-hover:-translate-x-0.5 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          </button>
          <button @click="next" class="bg-muted-foreground/80 hover:bg-primary text-white hover:text-foreground p-2 rounded transition-all duration-400 hover:scale-110 group" aria-label="Next">
            <svg class="h-6 w-6 group-hover:translate-x-0.5 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
        </div>
      </template>
    </div>

    <template x-if="images.length > 1">
      <div class="absolute top-2 left-2 bg-muted-foreground/80 text-white px-2 py-1 rounded text-sm z-10 backdrop-blur-sm font-medium">
        <span x-text="currentIndex + 1"></span>/<span x-text="images.length"></span>
      </div>
    </template>

    <template x-if="images.length > 1">
      <div class="absolute bottom-2 left-1/2 -translate-x-1/2 flex space-x-2 z-10">
        <template x-for="(image, index) in images" :key="index">
          <button
            @click="goToSlide(index)"
            class="w-2 h-2 rounded-full transition-all duration-400 hover:scale-125"
            :class="currentIndex === index ? 'bg-primary' : 'bg-card/50 hover:bg-primary/75'"
            :aria-label="`Go to slide ${index + 1}`"></button>
        </template>
      </div>
    </template>
  </div>

  <!-- Modal with full-resolution images -->
  <template x-if="isModalOpen">
    <div
      class="fixed inset-0 z-50 overflow-auto bg-foreground/95 backdrop-blur-sm"
      @click.self="closeModal"
      @touchstart="handleTouchStart($event)"
      @touchend="handleTouchEnd($event)"
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0"
      x-transition:enter-end="opacity-100"
    >
      <div class="min-h-screen flex items-center justify-center p-4">
        <div class="relative w-full max-w-6xl">
          <div class="absolute top-4 right-4 flex gap-2 z-20">
            <template x-if="images.length > 1">
              <button @click="toggleAutoplay" class="bg-muted-foreground/80 hover:bg-primary text-white hover:text-foreground p-2 rounded transition-all duration-400" :aria-label="autoplayEnabled ? 'Stop' : 'Play'">
                <svg x-show="!autoplayEnabled" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <svg x-show="autoplayEnabled" x-cloak class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </button>
            </template>
            <button @click="closeModal" class="bg-muted-foreground/80 hover:bg-primary text-white hover:text-foreground p-2 rounded transition-all duration-400" aria-label="Close">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>

          <div class="relative overflow-hidden rounded bg-foreground" style="height: 80vh;">
            <div class="flex h-full transition-transform duration-500 ease-in-out" :style="`transform: translateX(-${currentIndex * 100}%)`" style="will-change: transform;">
              <template x-for="(image, index) in images" :key="index">
                <div class="w-full h-full flex-shrink-0 flex items-center justify-center">
                  <!-- Use fullSrc for modal (higher resolution) -->
                  <img
                    :src="image.fullSrc"
                    :srcset="image.fullSrcset"
                    sizes="100vw"
                    :alt="image.alt"
                    class="max-w-full max-h-full object-contain transition-all duration-500"
                    :class="{ 'scale-100 opacity-100': index === currentIndex, 'scale-95 opacity-50': index !== currentIndex }"
                    loading="lazy"
                    decoding="async"
                  />
                </div>
              </template>
            </div>

            <template x-if="images.length > 1">
              <div class="absolute inset-y-0 left-0 right-0 flex items-center justify-between px-4 pointer-events-none">
                <button @click="prev" class="bg-muted-foreground/80 hover:bg-primary text-white hover:text-foreground p-4 rounded transition-all duration-400 pointer-events-auto" aria-label="Previous">
                  <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                  </svg>
                </button>
                <button @click="next" class="bg-muted-foreground/80 hover:bg-primary text-white hover:text-foreground p-4 rounded transition-all duration-400 pointer-events-auto" aria-label="Next">
                  <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </button>
              </div>
            </template>

            <template x-if="images.length > 1">
              <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 z-10">
                <div class="w-32 h-1 bg-card/20 rounded-full overflow-hidden">
                  <div class="h-full bg-primary transition-all duration-500" :style="`width: ${((currentIndex + 1) / images.length) * 100}%`"></div>
                </div>
                <div class="bg-muted-foreground/80 text-white px-3 py-2 rounded text-sm backdrop-blur-sm font-medium">
                  <span x-text="currentIndex + 1"></span> of <span x-text="images.length"></span>
                </div>
              </div>
            </template>
          </div>
        </div>
      </div>
    </div>
  </template>
</div>

<style>
  [x-cloak] { display: none !important; }
  .will-change-transform { will-change: transform; }
  button:focus-visible { outline: 2px solid #c9a961; outline-offset: 2px; }
  @media (prefers-reduced-motion: reduce) {
    .transition-transform, .transition-all, .transition-opacity { transition-duration: 0.01ms !important; }
    .animate-spin, .animate-pulse { animation: none !important; }
  }
  img { content-visibility: auto; }
</style>

<script>
  if (typeof window !== 'undefined' && !('requestIdleCallback' in window)) {
    // eslint-disable-next-line @typescript-eslint/no-explicit-any
    (window as any).requestIdleCallback = function(callback: any) {
      const start = Date.now();
      return setTimeout(function() {
        callback({
          didTimeout: false,
          timeRemaining: function() { return Math.max(0, 50 - (Date.now() - start)); }
        });
      }, 1);
    };
  }
</script>