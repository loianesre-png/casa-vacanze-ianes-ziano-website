---
/**
 * HomeHero Component
 * Main hero section for the home page
 * Welcomes visitors and highlights the main value proposition
 */
import { Image } from 'astro:assets';
import heroImage from '../../assets/images/20250519_115212.webp';
---

<section class="relative w-full min-h-[85vh] lg:min-h-[90vh] overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <Image
      src={heroImage}
      alt="Casa Negrano - Vista esterna della struttura"
      class="w-full h-full object-cover"
      widths={[400, 800, 1200, 1600, 2400]}
      sizes="100vw"
      loading="eager"
      fetchpriority="high"
      format="webp"
      quality={90}
    />
    <!-- Overlay gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-luxury-black/65 via-luxury-charcoal/55 to-luxury-black/75"></div>
  </div>

  <!-- Hero Content -->
  <div class="relative h-full min-h-[85vh] lg:min-h-[90vh] flex items-center">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full py-20">
      <div class="max-w-4xl">
        <!-- Welcome Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-luxury-gold/10 backdrop-blur-sm rounded mb-6 border border-luxury-gold/30">
          <svg class="w-5 h-5 text-luxury-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
            ></path>
          </svg>
          <span class="text-white text-sm font-medium uppercase tracking-wide">Appartamenti vacanze a Trento</span>
        </div>

        <!-- Main Heading -->
        <h1 class="font-heading text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-medium text-white mb-6 leading-tight">
          Benvenuti a <br />
          <span class="text-luxury-gold">Casa Negrano</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-xl sm:text-2xl md:text-3xl text-white/95 font-light mb-6 leading-relaxed">
          Appartamenti moderni nel cuore del Trentino
        </p>

        <!-- Description -->
        <p class="text-base sm:text-lg text-white/90 max-w-2xl mb-10 leading-relaxed">
          Situati a Villazzano, a soli 5 km dal centro di Trento, i nostri appartamenti offrono il perfetto equilibrio
          tra tranquillità e comodità. Scegli tra tre soluzioni pensate per ogni tipo di soggiorno.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="#appartamenti"
            class="btn-primary inline-flex items-center justify-center gap-3 px-8 py-4 hover:scale-105 group"
          >
            <span>Scopri gli appartamenti</span>
            <svg
              class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>

          <a
            href="/contatti"
            class="btn-ghost inline-flex items-center justify-center gap-3 px-8 py-4 backdrop-blur-sm"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <span>Contattaci</span>
          </a>
        </div>

        <!-- Key Features -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mt-12 pt-8 border-t border-luxury-gold/20">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded bg-luxury-gold/15 backdrop-blur-sm flex items-center justify-center">
              <svg class="w-6 h-6 text-luxury-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                ></path>
              </svg>
            </div>
            <div>
              <p class="text-white font-medium">Posizione strategica</p>
              <p class="text-white/70 text-sm">5 km da Trento centro</p>
            </div>
          </div>

          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded bg-luxury-gold/15 backdrop-blur-sm flex items-center justify-center">
              <svg class="w-6 h-6 text-luxury-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div>
              <p class="text-white font-medium">Comfort moderni</p>
              <p class="text-white/70 text-sm">Tutti i servizi inclusi</p>
            </div>
          </div>

          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded bg-luxury-gold/15 backdrop-blur-sm flex items-center justify-center">
              <svg class="w-6 h-6 text-luxury-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </div>
            <div>
              <p class="text-white font-medium">Check-in flessibile</p>
              <p class="text-white/70 text-sm">Dalle 16:00</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 hidden md:block">
    <a href="#appartamenti" class="flex flex-col items-center gap-2 text-luxury-gold/80 hover:text-luxury-gold transition-all duration-800 animate-bounce">
      <span class="text-sm uppercase tracking-wide">Scorri per scoprire</span>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>
