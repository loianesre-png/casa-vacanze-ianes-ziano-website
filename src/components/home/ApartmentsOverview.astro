---
/**
 * ApartmentsOverview Component
 * Displays all available apartments in a responsive grid
 *
 * Content is loaded from: src/content/dictionary/{locale}/homepage.yaml
 * Properties are loaded from: src/content/properties/*.yaml
 */
import ApartmentCard from './ApartmentCard.astro';
import { getProperties } from '~/utils/properties';
import { getHomepageContent, getCommonContent, getApartmentsContent, getCurrentLocale } from '~/utils/content';
import { getContactEmail, getContactPhone, getWhatsApp } from '~/config';
import { Icon } from 'astro-icon/components';

// Get current locale from URL
const currentLocale = getCurrentLocale(Astro.url);

// Load content from dictionary with locale
const homepage = await getHomepageContent(currentLocale);
const common = await getCommonContent(currentLocale);
const apartments = await getApartmentsContent(currentLocale);
const content = homepage.apartments;
const email = getContactEmail();
const phone = getContactPhone();
const whatsapp = getWhatsApp();

// Load properties from YAML
const properties = await getProperties();
---

<section id={content.section_id} class="py-16 md:py-20 lg:py-28 bg-gradient-to-br from-background via-card to-secondary">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12 md:mb-16">
      <h2 class="font-heading text-3xl md:text-4xl lg:text-5xl font-medium text-foreground mb-4">
        {content.title}
      </h2>
      <p class="text-lg md:text-xl text-muted-foreground max-w-3xl mx-auto leading-relaxed">
        {content.subtitle}
      </p>
      <div class="w-20 h-0.5 bg-primary mx-auto mt-6"></div>
    </div>

    <!-- Apartments Grid -->
    <div class={`grid grid-cols-1 gap-8 lg:gap-10 ${properties.length >= 2 ? 'md:grid-cols-2' : ''} ${properties.length >= 3 ? 'lg:grid-cols-3' : properties.length === 2 ? 'lg:grid-cols-2' : ''}`}>
      {properties.map((property) => <ApartmentCard property={property} />)}
    </div>

    <!-- Additional Info Banner -->
    <div class="mt-16 bg-gradient-to-r from-muted-foreground to-foreground rounded p-8 md:p-12 text-center text-white shadow-lg">
      <div class="max-w-4xl mx-auto">
        <h3 class="font-heading text-2xl md:text-3xl font-medium mb-4">{content.comparison_banner.title}</h3>
        <p class="text-lg mb-6 opacity-90 leading-relaxed">
          {content.comparison_banner.description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center flex-wrap">
          <a
            href="/contatti"
            class="btn-primary inline-flex items-center justify-center gap-2 px-8 py-4"
          >
            <Icon name="tabler:mail" class="w-5 h-5" />
            <span>{content.comparison_banner.cta}</span>
          </a>
          {phone && (
            <a
              href={`tel:${phone.replace(/\s/g, '')}`}
              class="btn-ghost inline-flex items-center justify-center gap-2 px-8 py-4"
            >
              <Icon name="tabler:phone" class="w-5 h-5" />
              <span>{phone}</span>
            </a>
          )}
          {whatsapp && (
            <a
              href={`https://wa.me/${whatsapp.replace(/[\s+]/g, '')}`}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-ghost inline-flex items-center justify-center gap-2 px-8 py-4"
            >
              <Icon name="tabler:brand-whatsapp" class="w-5 h-5" />
              <span>{whatsapp}</span>
            </a>
          )}
        </div>
      </div>
    </div>

    <!-- Quick Comparison Table -->
    <div class="mt-16">
      <h3 class="font-heading text-2xl md:text-3xl font-medium text-foreground text-center mb-8">
        {apartments.sections?.overview?.quick_comparison || 'Confronto rapido'}
      </h3>
      <div class="overflow-x-auto">
        <table class="w-full bg-card rounded shadow-md overflow-hidden">
          <thead class="bg-muted-foreground text-white">
            <tr>
              <th class="px-6 py-4 text-left font-medium uppercase tracking-wide text-sm">{apartments.comparison?.headers?.property || 'Appartamento'}</th>
              <th class="px-6 py-4 text-center font-medium uppercase tracking-wide text-sm">{common.labels.guests}</th>
              <th class="px-6 py-4 text-center font-medium uppercase tracking-wide text-sm">{common.labels.size}</th>
              <th class="px-6 py-4 text-center font-medium uppercase tracking-wide text-sm">{common.labels.bedrooms}</th>
              <th class="px-6 py-4 text-center font-medium uppercase tracking-wide text-sm">{common.labels.bathrooms}</th>
              <th class="px-6 py-4 text-center font-medium uppercase tracking-wide text-sm"></th>
            </tr>
          </thead>
          <tbody class="divide-y divide-muted">
            {
              properties.map((property, index) => (
                <tr class={index % 2 === 0 ? 'bg-secondary/30' : 'bg-card'}>
                  <td class="px-6 py-4">
                    <div>
                      <p class="font-medium text-foreground">{property.name.replace('Appartamento ', '')}</p>
                      <p class="text-sm text-muted-foreground">{property.subtitle}</p>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-center text-foreground font-medium">{property.capacity.guests}</td>
                  <td class="px-6 py-4 text-center text-foreground font-medium">{property.size.value} {property.size.unit === 'sqm' ? common.labels.sqm : 'ftÂ²'}</td>
                  <td class="px-6 py-4 text-center text-muted-foreground">{property.capacity.bedrooms}</td>
                  <td class="px-6 py-4 text-center text-muted-foreground">{property.capacity.bathrooms}</td>
                  <td class="px-6 py-4 text-center">
                    <a
                      href={`/appartamenti/${property.slug}`}
                      class="inline-flex items-center gap-1 text-primary hover:text-accent font-medium transition-all duration-400"
                    >
                      <span class="text-sm uppercase tracking-wide">{common.buttons.learn_more}</span>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17 8l4 4m0 0l-4 4m4-4H3"
                        />
                      </svg>
                    </a>
                  </td>
                </tr>
              ))
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
