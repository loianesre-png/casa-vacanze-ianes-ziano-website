---
/**
 * ApartmentsOverview Component
 * Displays all available apartments in a responsive grid
 *
 * Content is loaded from: src/content/dictionary/{locale}/homepage.yaml
 * Properties are loaded from: src/content/properties/*.yaml
 */
import ApartmentCard from './ApartmentCard.astro';
import { getProperties } from '~/utils/properties';
import { getHomepageContent, getCommonContent } from '~/utils/content';
import { getContactEmail } from '~/config';

// Load content from dictionary
const homepage = await getHomepageContent();
const common = await getCommonContent();
const content = homepage.apartments;
const email = getContactEmail();

// Load properties from YAML
const properties = await getProperties();
---

<section id={content.section_id} class="py-16 md:py-20 lg:py-28 bg-gradient-to-br from-luxury-cream via-luxury-white to-luxury-beige">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12 md:mb-16">
      <h2 class="font-heading text-3xl md:text-4xl lg:text-5xl font-medium text-luxury-black mb-4">
        {content.title}
      </h2>
      <p class="text-lg md:text-xl text-luxury-graphite max-w-3xl mx-auto leading-relaxed">
        {content.subtitle}
      </p>
      <div class="w-20 h-0.5 bg-luxury-gold mx-auto mt-6"></div>
    </div>

    <!-- Apartments Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
      {properties.map((property) => <ApartmentCard property={property} />)}
    </div>

    <!-- Additional Info Banner -->
    <div class="mt-16 bg-gradient-to-r from-luxury-charcoal to-luxury-black rounded p-8 md:p-12 text-center text-white shadow-luxury-lg">
      <div class="max-w-4xl mx-auto">
        <h3 class="font-heading text-2xl md:text-3xl font-medium mb-4">{content.comparison_banner.title}</h3>
        <p class="text-lg mb-6 opacity-90 leading-relaxed">
          {content.comparison_banner.description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contatti"
            class="btn-primary inline-flex items-center justify-center gap-2 px-8 py-4"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <span>{content.comparison_banner.cta}</span>
          </a>
          <a
            href={`mailto:${email}`}
            class="btn-ghost inline-flex items-center justify-center gap-2 px-8 py-4"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <span>{common.buttons.contact}</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Quick Comparison Table -->
    <div class="mt-16">
      <h3 class="font-heading text-2xl md:text-3xl font-medium text-luxury-black text-center mb-8">
        {common.labels.guests && 'Confronto rapido'}
      </h3>
      <div class="overflow-x-auto">
        <table class="w-full bg-luxury-white rounded shadow-luxury-md overflow-hidden">
          <thead class="bg-luxury-charcoal text-white">
            <tr>
              <th class="px-6 py-4 text-left font-medium uppercase tracking-wide text-sm">{common.navigation.apartments.slice(0, -1) || 'Appartamento'}</th>
              <th class="px-6 py-4 text-center font-medium uppercase tracking-wide text-sm">{common.labels.guests}</th>
              <th class="px-6 py-4 text-center font-medium uppercase tracking-wide text-sm">{common.labels.size}</th>
              <th class="px-6 py-4 text-center font-medium uppercase tracking-wide text-sm">{common.labels.bedrooms}</th>
              <th class="px-6 py-4 text-center font-medium uppercase tracking-wide text-sm">{common.labels.bathrooms}</th>
              <th class="px-6 py-4 text-center font-medium uppercase tracking-wide text-sm"></th>
            </tr>
          </thead>
          <tbody class="divide-y divide-luxury-sand">
            {
              properties.map((property, index) => (
                <tr class={index % 2 === 0 ? 'bg-luxury-beige/30' : 'bg-luxury-white'}>
                  <td class="px-6 py-4">
                    <div>
                      <p class="font-medium text-luxury-black">{property.name.replace('Appartamento ', '')}</p>
                      <p class="text-sm text-luxury-graphite">{property.subtitle}</p>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-center text-luxury-black font-medium">{property.capacity.guests}</td>
                  <td class="px-6 py-4 text-center text-luxury-black font-medium">{property.size.value} {property.size.unit === 'sqm' ? common.labels.sqm : 'ftÂ²'}</td>
                  <td class="px-6 py-4 text-center text-luxury-graphite">{property.capacity.bedrooms}</td>
                  <td class="px-6 py-4 text-center text-luxury-graphite">{property.capacity.bathrooms}</td>
                  <td class="px-6 py-4 text-center">
                    <a
                      href={`/appartamenti/${property.slug}`}
                      class="inline-flex items-center gap-1 text-luxury-gold hover:text-luxury-bronze font-medium transition-all duration-400"
                    >
                      <span class="text-sm uppercase tracking-wide">{common.buttons.learn_more}</span>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17 8l4 4m0 0l-4 4m4-4H3"
                        />
                      </svg>
                    </a>
                  </td>
                </tr>
              ))
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
